#!/usr/bin/env bash
# This script displays "Best School" 8 times
#+ displays bad luck for the 4th iteration and Goodluck for the 8th

count=1
while(("$count" <= 10))
do
    if [ "$count" -eq 4 ]
    then
	echo "bad luck"
    elif [ "$count" -eq 8 ]
    then
	 echo "good luck"
    else
	echo "Best School"
    fi
done
